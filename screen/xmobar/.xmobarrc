Config { font = "-*-Fixed-Bold-R-Normal-*-24-*-*-*-*-*-*-*"
       , bgColor = "#f0f0f0"
       , fgColor = "black"
       , position = TopW L 90
       , lowerOnStart = True
       , commands = [ Run Weather "UUBW" ["-t"," <tempC>C","-L","64","-H","77","--normal","green","--high","red","--low","blue"] 36000
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
		    , Run Memory ["-t","Mem: <usedratio>%"] 10
		    , Run Swap [] 10
		    , Run Date "%a %b %_d %l:%M" "date" 10
		    , Run StdinReader
		    ]
       , sepChar ="%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap%    <fc=#ee9a00>%date%</fc> | %UUBW%"
       }
